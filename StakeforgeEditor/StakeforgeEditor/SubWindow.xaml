<Window x:Class="StakeforgeEditor.SubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StakeforgeEditor"
        mc:Ignorable="d"
        Title="StakeforgeEditor" Width="1280" Height="780"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        AllowsTransparency="False"
        BorderBrush="{StaticResource brush_background0}" BorderThickness="2,2,2,2"
        Background="Transparent">


    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Grid x:Name="RootGrid" Background="{StaticResource brush_background3}">
        <Grid.RowDefinitions>
            <RowDefinition Height="{StaticResource height_top_bar_sub}"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                <Label Margin=" 4, 0, 0, 0"  Style="{StaticResource style_label_icon}" Content="{StaticResource str_icon_stake}"/>
                <Label Style="{StaticResource style_label_default}" Content="Stakeforge Editor" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="Minimize" Content="{StaticResource str_icon_minimize}" Style="{StaticResource style_button_window}" Click="OnClickMinimize"/>
                <Button Content="{StaticResource str_icon_maximize}" Style="{StaticResource style_button_window}" Click="OnClickMaximize"/>
                <Button Content="{StaticResource str_icon_close}" Style="{StaticResource style_button_window_close}" Click="OnClickClose"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
