<Window x:Class="StakeforgeEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StakeforgeEditor"
        xmlns:main="clr-namespace:StakeforgeEditor.Main"
        mc:Ignorable="d"
        Title="StakeforgeEditor" Width="1280" Height="780"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        AllowsTransparency="False"
        BorderBrush="{StaticResource brush_background0}" BorderThickness="2,2,2,2"
        Background="Transparent">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    
    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="{StaticResource height_top_bar}"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <main:TopBar x:Name="TopBar" Grid.Row="0"></main:TopBar>

    </Grid>
</Window>
