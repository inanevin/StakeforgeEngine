<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:local="clr-namespace:StakeforgeEditor.Widgets"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Reusable Style for rounded, placeholder TextBox -->
    <Style x:Key="input_field_default" TargetType="{x:Type local:InputFieldDefault}" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="BorderThickness" Value="{StaticResource thickness_border}"/>
        <Setter Property="Padding" Value="{StaticResource indent_horizontal}"/>
        <Setter Property="Background" Value="{StaticResource brush_background0}"/>
        <Setter Property="BorderBrush" Value="{StaticResource brush_background_light0}"/>
        <Setter Property="Foreground" Value="{StaticResource brush_text_primary}"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Height" Value="{StaticResource height_item_base}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="{StaticResource font_default}"/>
        <Setter Property="FontSize" Value="{StaticResource size_default_font}"/>
        <Setter Property="SelectionBrush" Value="{StaticResource brush_accent_primary}"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:InputFieldDefault}">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource rounding_default}">
                        <Grid>
                            
                            <!-- The actual text area -->
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Background="Transparent"
                                          Focusable="False"/>

                            <StackPanel x:Name="Watermark" 
                        Margin="{StaticResource indent_horizontal}" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center" 
                        IsHitTestVisible="False">

                                <TextBlock Opacity="0.45" Text="{TemplateBinding PlaceholderIcon}" 
                           FontFamily="{StaticResource font_icons}" 
                           Foreground="{StaticResource brush_text_primary}"/>

                                <TextBlock Opacity="0.45" Margin="{StaticResource spacing_left}"
                           Text="{TemplateBinding PlaceholderText}"/>
                            </StackPanel>

                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Text.IsEmpty}" Value="False">
                            <Setter TargetName="Watermark" Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>

                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource brush_accent_purple}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    
</ResourceDictionary>