<!-- Theme.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Colors -->
    <Color x:Key="color_background0">#0E0E0E</Color>
    <Color x:Key="color_background1">#141414</Color>
    <Color x:Key="color_background2">#1A1A1A</Color>
    <Color x:Key="color_background3">#202020</Color>

    <Color x:Key="color_background_light0">#282828</Color>

    <Color x:Key="color_gray0">#3F3F3F</Color>

    <Color x:Key="color_accent_primary">#5ABEFF</Color>
    <Color x:Key="color_accent_primary_light">#8CD3FF</Color>
    <Color x:Key="color_accent_primary2">#0B7772</Color>
    <Color x:Key="color_accent_secondary">#F00020</Color>
    <Color x:Key="color_accent_green">#00CC88</Color>

    <Color x:Key="color_accent_purple">#5B0048</Color>
    <Color x:Key="color_accent_purple_light">#970077</Color>
    <Color x:Key="color_accent_purple_light_transparent">#80970077</Color>


    <Color x:Key="color_text_primary">#E6E6E6</Color>
    <Color x:Key="color_text_muted">#828282</Color>

    <!-- Solid Brushes (for use in Background, Foreground, etc.) -->
    <SolidColorBrush x:Key="brush_background0" Color="{StaticResource color_background0}"/>
    <SolidColorBrush x:Key="brush_background1" Color="{StaticResource color_background1}"/>
    <SolidColorBrush x:Key="brush_background2" Color="{StaticResource color_background2}"/>
    <SolidColorBrush x:Key="brush_background3" Color="{StaticResource color_background3}"/>

    <SolidColorBrush x:Key="brush_background_light0" Color="{StaticResource color_background_light0}"/>

    <SolidColorBrush x:Key="brush_gray" Color="{StaticResource color_gray0}"/>

    <SolidColorBrush x:Key="brush_accent_primary" Color="{StaticResource color_accent_primary}"/>
    <SolidColorBrush x:Key="brush_accent_primary_light" Color="{StaticResource color_accent_primary_light}"/>
    <SolidColorBrush x:Key="brush_accent_secondary" Color="{StaticResource color_accent_secondary}"/>
    <SolidColorBrush x:Key="brush_accent_green" Color="{StaticResource color_accent_green}"/>
    <SolidColorBrush x:Key="brush_accent_purple" Color="{StaticResource color_accent_purple}"/>
    <SolidColorBrush x:Key="brush_accent_purple_light" Color="{StaticResource color_accent_purple_light}"/>
    <SolidColorBrush x:Key="brush_accent_purple_light_transparent" Color="{StaticResource color_accent_purple_light_transparent}"/>
    <SolidColorBrush x:Key="brush_text_primary" Color="{StaticResource color_text_primary}"/>
    <SolidColorBrush x:Key="brush_text_muted" Color="{StaticResource color_text_muted}"/>

    <FontFamily x:Key="font_default">fonts/vt323_regular.ttf#VT323</FontFamily>
    <FontFamily x:Key="font_icons">fonts/sfg.ttf#StakeforgeEditorIcons</FontFamily>

    <!-- Dimensions -->
    <sys:Double x:Key="height_item_base">26</sys:Double>
    <sys:Double x:Key="height_item_base_small">18</sys:Double>
    <sys:Double x:Key="height_item_big">32</sys:Double>
    <sys:Double x:Key="thickness_border">2</sys:Double>
    <GridLength x:Key="height_top_bar">48</GridLength>
    <GridLength x:Key="height_top_bar_sub">26</GridLength>

    <Thickness x:Key="margin_horizontal">14,0,14,0</Thickness>
    <Thickness x:Key="spacing_left">8,0,0,0</Thickness>
    <Thickness x:Key="context_border">2,2,2,2</Thickness>

    <sys:Double x:Key="size_icon_font">16</sys:Double>
    <sys:Double x:Key="size_icon_font_small">12</sys:Double>
    <sys:Double x:Key="size_default_font">14</sys:Double>
    <sys:Double x:Key="size_min_dock_area">250</sys:Double>

    <!-- ICONS -->
    <sys:String x:Key="str_icon_stake">&#x37;</sys:String>
    <sys:String x:Key="str_icon_burger">&#x38;</sys:String>
    <sys:String x:Key="str_icon_play">&#x2c;</sys:String>
    <sys:String x:Key="str_icon_pause">&#x2d;</sys:String>
    <sys:String x:Key="str_icon_minimize">&#x58;</sys:String>
    <sys:String x:Key="str_icon_maximize">&#x59;</sys:String>
    <sys:String x:Key="str_icon_close">&#x57;</sys:String>
    <sys:String x:Key="str_icon_dd_arrow_left">&#x45;</sys:String>
    <sys:String x:Key="str_icon_dd_arrow_right">&#x46;</sys:String>
    <sys:String x:Key="str_icon_dd_arrow_up">&#x47;</sys:String>
    <sys:String x:Key="str_icon_dd_arrow_down">&#x48;</sys:String>
    <sys:String x:Key="str_icon_dotted_rect">&#x21;</sys:String>
    <sys:String x:Key="str_icon_dotted_add">&#x77;</sys:String>
    <sys:String x:Key="str_icon_add">&#x78;</sys:String>

    <LinearGradientBrush x:Key="gradient_title_bar_0" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="{StaticResource color_background3}" Offset="0.0"/>
        <GradientStop Color="{StaticResource color_accent_purple}" Offset="0.1"/>
        <GradientStop Color="{StaticResource color_accent_purple}" Offset="0.2"/>
        <GradientStop Color="{StaticResource color_background3}" Offset=".4"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="gradient_purple_vertical" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="{StaticResource color_accent_purple_light}" Offset="0.0"/>
        <GradientStop Color="{StaticResource color_accent_purple}" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="gradient_blue_vertical" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="{StaticResource color_accent_primary_light}" Offset="0.0"/>
        <GradientStop Color="{StaticResource color_accent_primary}" Offset="1.0"/>
    </LinearGradientBrush>

</ResourceDictionary>