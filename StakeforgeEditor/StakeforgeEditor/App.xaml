<Application x:Class="StakeforgeEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StakeforgeEditor"
             xmlns:converters="clr-namespace:StakeforgeEditor.Converters"
             xmlns:common="clr-namespace:StakeforgeEditor.Common"
             ShutdownMode="OnMainWindowClose"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/resources/theme.xaml"/>
                <ResourceDictionary Source="/resources/buttons.xaml"/>
                <ResourceDictionary Source="/resources/data_templates.xaml"/>
                <ResourceDictionary Source="/resources/tabs.xaml"/>
                <ResourceDictionary Source="/resources/context_menus.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:BooleanToVisibilityConverter x:Key="bool_to_vis_converter"/>
            <converters:PercentageConverter x:Key="percentage_converter"/>
            <converters:DockOverlayStateToVisibilityConverter x:Key="dock_overlay_to_visibility"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
